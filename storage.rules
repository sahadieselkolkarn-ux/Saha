rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // อนุญาตให้ผู้ใช้ที่ผ่านการเข้าสู่ระบบสามารถอ่านและเขียนไฟล์ได้ทั้งหมด
    // เพื่อรองรับการเก็บรูปภาพงานซ่อม, รูปบิล, และคู่มือต่างๆ
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}