rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files are organized by job ID.
    // Allow public read access to all files, as download URLs are shared.
    // Allow authenticated users to write (upload) files. The logic to associate
    // files with a specific job is handled in the application and secured by
    // Firestore rules, which control the writing of the file URL into the job document.
    match /jobs/{jobId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
