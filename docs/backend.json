{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": [
            "ADMIN",
            "MANAGER",
            "OFFICER",
            "WORKER"
          ]
        },
        "department": {
          "type": "string",
          "description": "The department the user belongs to.",
          "enum": [
            "MANAGEMENT",
            "OFFICE",
            "CAR_SERVICE",
            "COMMONRAIL",
            "MECHANIC",
            "OUTSOURCE"
          ]
        },
        "status": {
          "type": "string",
          "description": "The user's account status.",
          "enum": [
            "ACTIVE",
            "PENDING",
            "SUSPENDED"
          ]
        },
        "personal": {
          "type": "object",
          "description": "Personal information of the user.",
          "properties": {
            "idCardNo": {
              "type": "string"
            },
            "address": {
              "type": "string"
            },
            "bank": {
              "type": "object",
              "properties": {
                "bankName": {
                  "type": "string"
                },
                "accountName": {
                  "type": "string"
                },
                "accountNo": {
                  "type": "string"
                }
              }
            },
            "emergencyContact": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "relationship": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                }
              }
            }
          }
        },
        "hr": {
          "type": "object",
          "description": "HR-related information for the user.",
          "properties": {
            "salaryMonthly": {
              "type": "number"
            },
            "payType": {
              "type": "string",
              "enum": [
                "MONTHLY",
                "DAILY",
                "MONTHLY_NOSCAN",
                "NOPAY"
              ]
            },
            "startDate": {
              "type": "string",
              "format": "date",
              "description": "The user's start date of employment."
            },
            "endDate": {
              "type": "string",
              "format": "date",
              "description": "The user's end date of employment."
            },
            "ssoHospital": {
              "type": "string"
            },
            "note": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user was last updated."
        },
        "lastAttendance": {
          "type": "object",
          "description": "The user's last attendance record to avoid complex queries.",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "IN",
                "OUT"
              ]
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "required": [
        "uid",
        "displayName",
        "email",
        "phone",
        "createdAt",
        "updatedAt"
      ]
    },
    "Customer": {
      "title": "Customer",
      "type": "object",
      "description": "Represents a customer.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the customer."
        },
        "name": {
          "type": "string",
          "description": "The customer's name."
        },
        "phone": {
          "type": "string",
          "description": "The customer's phone number."
        },
        "detail": {
          "type": "string",
          "description": "Additional details about the customer."
        },
        "useTax": {
          "type": "boolean",
          "description": "Indicates whether the customer uses tax."
        },
        "taxName": {
          "type": "string",
          "description": "The customer's tax name (if useTax is true)."
        },
        "taxAddress": {
          "type": "string",
          "description": "The customer's tax address (if useTax is true)."
        },
        "taxId": {
          "type": "string",
          "description": "The customer's tax ID (if useTax is true)."
        },
        "taxBranchType": {
            "type": "string",
            "description": "Branch type for tax purposes.",
            "enum": ["HEAD_OFFICE", "BRANCH"]
        },
        "taxBranchNo": {
            "type": "string",
            "description": "5-digit branch number if type is 'BRANCH'."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the customer was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp of when the customer was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "phone",
        "detail",
        "useTax",
        "createdAt",
        "updatedAt"
      ]
    },
    "Vendor": {
      "title": "Vendor",
      "type": "object",
      "description": "Represents a vendor or supplier.",
      "properties": {
        "id": { "type": "string" },
        "shortName": { "type": "string", "description": "Unique, short identifier for the vendor (e.g., 'BBL', 'SDK')." },
        "companyName": { "type": "string", "description": "Full legal name of the vendor company/store." },
        "address": { "type": "string" },
        "phone": { "type": "string" },
        "contactName": { "type": "string" },
        "contactPhone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "taxId": { "type": "string" },
        "notes": { "type": "string" },
        "isActive": { "type": "boolean", "default": true },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "shortName", "companyName", "isActive", "createdAt", "updatedAt"]
    },
    "Job": {
      "title": "Job",
      "type": "object",
      "description": "Represents a job.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the job."
        },
        "customerId": {
          "type": "string",
          "description": "Reference to Customer. (Relationship: Customer 1:N Job)"
        },
        "customerSnapshot": {
          "type": "object",
          "description": "Snapshot of customer data (name, phone) at the time the job was created.",
          "properties": {
            "name": {
              "type": "string"
            },
            "phone": {
              "type": "string"
            },
            "useTax": {
              "type": "boolean"
            }
          },
          "required": [
            "name",
            "phone"
          ]
        },
        "department": {
          "type": "string",
          "description": "The department responsible for the job (CAR_SERVICE, COMMONRAIL, MECHANIC, OUTSOURCE)."
        },
        "status": {
          "type": "string",
          "description": "The job's status (RECEIVED, IN_PROGRESS, WAITING_QUOTATION, WAITING_APPROVE, PENDING_PARTS, IN_REPAIR_PROCESS, DONE, WAITING_CUSTOMER_PICKUP, CLOSED).",
          "enum": [
            "RECEIVED",
            "IN_PROGRESS",
            "WAITING_QUOTATION",
            "WAITING_APPROVE",
            "PENDING_PARTS",
            "IN_REPAIR_PROCESS",
            "DONE",
            "WAITING_CUSTOMER_PICKUP",
            "CLOSED"
          ]
        },
        "description": {
          "type": "string",
          "description": "Description of the job (symptoms/details)."
        },
        "photos": {
          "type": "array",
          "description": "Array of URLs for photos related to the job.",
          "items": {
            "type": "string"
          }
        },
        "technicalReport": {
          "type": "string",
          "description": "Technical report or test results, mainly for COMMONRAIL and MECHANIC jobs."
        },
        "carServiceDetails": {
          "type": "object",
          "description": "Details specific to Car Service jobs.",
          "properties": {
            "brand": { "type": "string" },
            "model": { "type": "string" },
            "licensePlate": { "type": "string" }
          }
        },
        "commonrailDetails": {
          "type": "object",
          "description": "Details specific to Commonrail jobs.",
          "properties": {
            "brand": { "type": "string" },
            "partNumber": { "type": "string" },
            "registrationNumber": { "type": "string" }
          }
        },
        "mechanicDetails": {
          "type": "object",
          "description": "Details specific to Mechanic jobs.",
          "properties": {
            "brand": { "type": "string" },
            "partNumber": { "type": "string" },
            "registrationNumber": { "type": "string" }
          }
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the job was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp of when the job was last updated.",
          "format": "date-time"
        },
        "lastActivityAt": {
          "type": "string",
          "description": "Timestamp of the last activity related to the job.",
          "format": "date-time"
        },
        "pickupDate": {
          "type": "string",
          "format": "date",
          "description": "Date the customer picked up the item."
        },
        "closedDate": {
          "type": "string",
          "format": "date",
          "description": "Date the job was closed."
        },
        "salesDocType": {
          "type": "string",
          "enum": ["DELIVERY_NOTE", "TAX_INVOICE"],
          "description": "The type of sales document associated with the closed job."
        },
        "salesDocId": {
          "type": "string",
          "description": "The ID of the sales document associated with the closed job."
        },
        "salesDocNo": {
          "type": "string",
          "description": "The document number of the sales document for quick reference."
        },
        "paymentStatusAtClose": {
          "type": "string",
          "enum": ["PAID", "UNPAID"],
          "description": "The payment status at the moment the job was closed."
        }
      },
      "required": [
        "id",
        "customerId",
        "customerSnapshot",
        "department",
        "status",
        "description",
        "photos",
        "createdAt",
        "updatedAt",
        "lastActivityAt"
      ]
    },
    "JobActivity": {
      "title": "Job Activity",
      "description": "Represents a single activity log entry for a job.",
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "The text content of the activity log."
        },
        "userName": {
          "type": "string",
          "description": "Name of the user who created the activity."
        },
        "userId": {
          "type": "string",
          "description": "UID of the user who created the activity."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the activity was created."
        },
        "photos": {
          "type": "array",
          "description": "Array of URLs for photos related to the activity.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "required": [
        "text",
        "userName",
        "userId",
        "createdAt"
      ]
    },
    "DocumentItem": {
      "title": "Document Line Item",
      "description": "Represents a single line item in a financial document.",
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "quantity": { "type": "number" },
        "unitPrice": { "type": "number" },
        "total": { "type": "number" }
      },
      "required": ["description", "quantity", "unitPrice", "total"]
    },
    "Document": {
      "title": "Document",
      "description": "Represents a generic financial document.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "docType": { 
          "type": "string",
          "description": "Type of the document.",
          "enum": ["QUOTATION", "DELIVERY_NOTE", "TAX_INVOICE", "RECEIPT", "BILLING_NOTE", "CREDIT_NOTE", "WITHHOLDING_TAX"]
        },
        "docNo": { "type": "string", "description": "The unique, running document number." },
        "docDate": { "type": "string", "format": "date" },
        "jobId": { "type": "string" },
        "customerSnapshot": { "$ref": "#/backend/entities/Customer" },
        "carSnapshot": { "type": "object", "properties": {"licensePlate": {"type": "string"},"details": {"type": "string"}}},
        "storeSnapshot": { "$ref": "#/backend/entities/StoreSettings" },
        "items": { "type": "array", "items": { "$ref": "#/backend/entities/DocumentItem" } },
        "subtotal": { "type": "number" },
        "discountAmount": { "type": "number" },
        "net": { "type": "number" },
        "withTax": { "type": "boolean" },
        "vatAmount": { "type": "number" },
        "grandTotal": { "type": "number" },
        "notes": { "type": "string" },
        "status": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "expiryDate": { "type": "string", "format": "date" },
        "dueDate": { "type": "string", "format": "date" },
        "senderName": { "type": "string" },
        "receiverName": { "type": "string" },
        "paymentMethod": { "type": "string" },
        "paymentDate": { "type": "string", "format": "date" },
        "receivedAccountId": { "type": "string" },
        "cashReceived": { "type": "number" },
        "withholdingEnabled": { "type": "boolean" },
        "withholdingAmount": { "type": "number" },
        "referencesDocIds": { "type": "array", "items": { "type": "string"} },
        "reason": { "type": "string" },
        "invoiceIds": { "type": "array", "items": { "type": "string"} },
        "totalAmount": { "type": "number" }
      },
      "required": ["id", "docType", "docNo", "docDate", "customerSnapshot", "storeSnapshot", "items", "grandTotal", "createdAt", "updatedAt"]
    },
    "DocumentCounters": {
      "title": "Document Counters",
      "description": "Stores the last used counter for each document type for a given year.",
      "type": "object",
      "properties": {
        "year": { "type": "number" },
        "quotation": { "type": "number" },
        "deliveryNote": { "type": "number" },
        "taxInvoice": { "type": "number" },
        "receipt": { "type": "number" },
        "billingNote": { "type": "number" },
        "creditNote": { "type": "number" },
        "withholdingTax": { "type": "number" },
        "purchase": { "type": "number" }
      }
    },
    "Attendance": {
      "title": "Attendance",
      "description": "Represents a user's clock-in or clock-out record.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the attendance record."
        },
        "userId": {
          "type": "string",
          "description": "The UID of the user who this record belongs to."
        },
        "userName": {
          "type": "string",
          "description": "The display name of the user at the time of recording."
        },
        "type": {
          "type": "string",
          "description": "The type of record, either IN or OUT.",
          "enum": [
            "IN",
            "OUT"
          ]
        },
        "timestamp": {
          "type": "string",
          "description": "Timestamp of when the record was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "userName",
        "type",
        "timestamp"
      ]
    },
    "KioskToken": {
      "title": "Kiosk Token",
      "description": "A short-lived token generated by a kiosk for attendance scanning.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique token string."
        },
        "createdAtMs": {
          "type": "number",
          "description": "Timestamp (in milliseconds) of when the token was created."
        },
        "expiresAtMs": {
          "type": "number",
          "description": "Timestamp (in milliseconds) of when the token expires."
        },
        "isActive": {
          "type": "boolean",
          "description": "Whether the token is currently active."
        }
      },
      "required": [
        "id",
        "createdAtMs",
        "expiresAtMs",
        "isActive"
      ]
    },
    "LeaveTypePolicy": {
      "title": "Leave Type Policy",
      "description": "Defines the policy for a specific type of leave.",
      "type": "object",
      "properties": {
        "annualEntitlement": {
          "type": "number",
          "description": "Number of entitled leave days per year."
        },
        "overLimitHandling": {
          "type": "object",
          "description": "How to handle leaves that exceed the annual entitlement.",
          "properties": {
            "mode": {
              "type": "string",
              "enum": [
                "DEDUCT_SALARY",
                "UNPAID",
                "DISALLOW"
              ],
              "description": "Action to take when leave limit is exceeded."
            },
            "salaryDeductionBaseDays": {
              "type": "number",
              "description": "The base number of days to divide the monthly salary by for deduction calculation (e.g., 26)."
            }
          }
        }
      }
    },
    "HRSettings": {
      "title": "HR Settings",
      "description": "Configuration for Human Resources module.",
      "type": "object",
      "properties": {
        "workStart": {
          "type": "string",
          "description": "Work start time (HH:mm)"
        },
        "workEnd": {
          "type": "string",
          "description": "Work end time (HH:mm)"
        },
        "breakStart": {
          "type": "string",
          "description": "Break start time (HH:mm)"
        },
        "breakEnd": {
          "type": "string",
          "description": "Break end time (HH:mm)"
        },
        "graceMinutes": {
          "type": "number",
          "description": "Grace period for being late in minutes."
        },
        "absentCutoffTime": {
          "type": "string",
          "description": "Time after which an employee is marked absent (HH:mm)."
        },
        "minSecondsBetweenScans": {
          "type": "number",
          "description": "Minimum seconds between two attendance scans for the same user."
        },
        "weekendPolicy": {
            "type": "object",
            "description": "Defines which days are considered weekends.",
            "properties": {
                "mode": {
                    "type": "string",
                    "enum": ["SAT_SUN", "SUN_ONLY"],
                    "description": "Determines which days are weekends."
                }
            }
        },
        "payroll": {
          "type": "object",
          "properties": {
            "payday1": {
              "type": "number"
            },
            "payday2": {
              "type": "string"
            },
            "period1Start": {
              "type": "number"
            },
            "period1End": {
              "type": "number"
            },
            "period2Start": {
              "type": "number"
            },
            "period2End": {
              "type": "string"
            }
          }
        },
        "sso": {
          "type": "object",
          "properties": {
            "employeePercent": {
              "type": "number"
            },
            "employerPercent": {
              "type": "number"
            },
            "monthlyCap": {
              "type": "number"
            },
            "effectiveFrom": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "withholding": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "defaultPercent": {
              "type": "number"
            },
            "note": {
              "type": "string"
            }
          }
        },
        "leavePolicy": {
          "type": "object",
          "description": "Defines the company's leave policy.",
          "properties": {
            "calculationPeriod": {
              "type": "string",
              "enum": [
                "CALENDAR_YEAR"
              ],
              "description": "The period for calculating annual leave entitlement (fixed to calendar year)."
            },
            "leaveTypes": {
              "type": "object",
              "description": "Configuration for different types of leave.",
              "properties": {
                "SICK": {
                  "$ref": "#/backend/entities/LeaveTypePolicy"
                },
                "BUSINESS": {
                  "$ref": "#/backend/entities/LeaveTypePolicy"
                },
                "VACATION": {
                  "$ref": "#/backend/entities/LeaveTypePolicy"
                }
              }
            }
          }
        }
      }
    },
    "HRHoliday": {
      "title": "HR Holiday",
      "description": "Represents a single company holiday.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the holiday in YYYY-MM-DD format."
        },
        "name": {
          "type": "string",
          "description": "The name of the holiday (e.g., New Year's Day)."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the holiday was added."
        }
      },
      "required": [
        "id",
        "date",
        "name",
        "createdAt"
      ]
    },
    "LeaveRequest": {
      "title": "Leave Request",
      "description": "Represents a single leave request submitted by an employee.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "leaveType": {
          "type": "string",
          "enum": [
            "SICK",
            "BUSINESS",
            "VACATION"
          ]
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "days": {
          "type": "number"
        },
        "reason": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "SUBMITTED",
            "APPROVED",
            "REJECTED",
            "CANCELLED"
          ]
        },
        "year": {
          "type": "number"
        },
        "approvedByName": {
          "type": "string",
          "description": "Name of the user who approved the request."
        },
        "approvedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the request was approved."
        },
        "rejectedByName": {
          "type": "string",
          "description": "Name of the user who rejected the request."
        },
        "rejectedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the request was rejected."
        },
        "rejectReason": {
          "type": "string",
          "description": "Reason for rejecting the request."
        },
        "overLimit": {
          "type": "boolean",
          "description": "Whether this leave request exceeded the annual entitlement."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "userName",
        "leaveType",
        "startDate",
        "endDate",
        "days",
        "reason",
        "status",
        "year",
        "createdAt",
        "updatedAt"
      ]
    },
    "AttendanceAdjustment": {
      "title": "Attendance Adjustment",
      "description": "Represents a manual adjustment to an attendance record for a specific day.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "date": { "type": "string", "format": "date", "description": "The date being adjusted (YYYY-MM-DD)." },
        "type": { "type": "string", "enum": ["ADD_RECORD", "FORGIVE_LATE"] },
        "adjustedIn": { "type": "string", "format": "date-time" },
        "adjustedOut": { "type": "string", "format": "date-time" },
        "notes": { "type": "string", "description": "Reason for the adjustment." },
        "updatedBy": { "type": "string", "description": "Name of the admin who made the change." },
        "updatedById": { "type": "string", "description": "UID of the admin who made the change." },
