    },
    "PayrollRun": {
      "title": "Payroll Run",
      "description": "Represents a single payroll processing cycle for a specific period.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "year": { "type": "number" },
        "month": { "type": "number" },
        "period": { "type": "number", "description": "1 for first half, 2 for second half." },
        "status": { "type": "string", "enum": ["DRAFT_HR", "SENT_TO_EMPLOYEE", "FINAL"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "finalizedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "year", "month", "period", "status", "createdAt"]
    },
    "Payslip": {
      "title": "Payslip",
      "description": "Represents an individual employee's payslip for a specific payroll run.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "payrollRunId": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "baseSalary": {
          "type": "number",
          "description": "The base salary for the period before deductions."
        },
        "deductions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "amount": {
                "type": "number"
              },
              "notes": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "amount"
            ]
          }
        },
        "netSalary": {
          "type": "number",
          "description": "Final salary after all deductions."
        },
        "isOverridden": {
          "type": "boolean"
        },
        "overrideNotes": {
          "type": "string"
        },
        "employeeStatus": {
          "type": "string",
          "enum": [
            "PENDING_REVIEW",
            "ACCEPTED",
            "REJECTED"
          ]
        },
        "employeeAccepted": {
          "type": "boolean"
        },
        "employeeAcceptedAt": {
          "type": "string",
          "format": "date-time"
        },
        "employeeNote": {
          "type": "string"
        },
        "sentToEmployeeAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the payslip was sent to the employee for review."
        },
        "hrCheckedByName": {
          "type": "string"
        },
        "hrCheckedAt": {
          "type": "string",
          "format": "date-time"
        },
        "hrNote": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "payrollRunId",
        "userId",
        "baseSalary",
        "netSalary"
      ]
    },
    "StoreSettings": {
      "title": "Store Settings",
