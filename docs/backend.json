        "creditNotePrefix": { "type": "string" },
        "withholdingTaxPrefix": { "type": "string" },
        "purchasePrefix": { "type": "string" }
      }
    },
    "AccountingAccount": {
      "title": "Accounting Account",
      "description": "Represents a cash or bank account for accounting purposes.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["CASH", "BANK"] },
        "bankName": { "type": "string" },
        "accountNo": { "type": "string" },
        "isActive": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "openingBalance": { "type": "number" },
        "openingBalanceDate": { "type": "string", "format": "date" },
        "openingBalanceSetByUid": { "type": "string" },
        "openingBalanceSetAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "type", "isActive", "createdAt", "updatedAt"]
    },
    "AccountingEntry": {
      "title": "Accounting Entry",
      "description": "An immutable record of a financial transaction, like a receipt or cash payment.",
      "type": "object",
      "properties": {
        "entryType": { "type": "string", "enum": ["RECEIPT", "CASH_IN", "CASH_OUT"] },
        "entryDate": { "type": "string", "format": "date" },
        "amount": { "type": "number" },
        "accountId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "sourceDocType": { "type": "string" },
        "sourceDocId": { "type": "string" },
        "sourceDocNo": { "type": "string" },
        "referenceInvoiceId": { "type": "string" },
        "customerNameSnapshot": { "type": "string" },
        "jobId": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "categoryMain": { "type": "string" },
        "categorySub": { "type": "string" },
        "paymentMethod": { "type": "string", "enum": ["CASH", "TRANSFER", "CREDIT"] },
        "vendorId": { "type": "string" },
        "vendorShortNameSnapshot": { "type": "string" },
        "vendorNameSnapshot": { "type": "string" },
        "counterpartyNameSnapshot": { "type": "string" }
      },
      "required": ["entryType", "entryDate", "amount", "accountId", "createdAt"]
    },
    "PaymentClaim": {
      "title": "Payment Claim",
      "description": "An entry for an incoming payment that requires verification from the accounting department.",
      "type": "object",
      "properties": {
        "status": { "type": "string", "enum": ["PENDING", "APPROVED", "REJECTED"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "createdByUid": { "type": "string" },
        "createdByName": { "type": "string" },
        "jobId": { "type": "string" },
        "sourceDocType": { "type": "string", "enum": ["DELIVERY_NOTE", "TAX_INVOICE", "RECEIPT"] },
        "sourceDocId": { "type": "string" },
        "sourceDocNo": { "type": "string" },
        "customerNameSnapshot": { "type": "string" },
        "amountDue": { "type": "number" },
        "suggestedPaymentMethod": { "type": "string", "enum": ["CASH", "TRANSFER", "CREDIT"] },
        "suggestedAccountId": { "type": "string" },
        "note": { "type": "string" },
        "approvedAt": { "type": "string", "format": "date-time" },
        "approvedByUid": { "type": "string" },
        "approvedByName": { "type": "string" },
        "receivedDate": { "type": "string", "format": "date" },
        "paymentMethod": { "type": "string", "enum": ["CASH", "TRANSFER"] },
        "accountId": { "type": "string" },
        "withholdingEnabled": { "type": "boolean" },
        "withholdingAmount": { "type": "number" },
        "cashReceived": { "type": "number" },
        "docSyncedAt": { "type": "string", "format": "date-time" },
        "rejectedAt": { "type": "string", "format": "date-time" },
        "rejectedByUid": { "type": "string" },
        "rejectedByName": { "type": "string" },
        "rejectReason": { "type": "string" }
      },
      "required": ["status", "createdAt", "createdByUid", "createdByName", "sourceDocId", "sourceDocNo", "amountDue"]
    },
    "AccountingObligation": {
      "title": "Accounting Obligation",
      "description": "Represents an accounts receivable (AR) or payable (AP) item.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["AR", "AP"] },
        "status": { "type": "string", "enum": ["UNPAID", "PARTIAL", "PAID"] },
        "sourceDocType": { "type": "string", "enum": ["DELIVERY_NOTE", "TAX_INVOICE", "PURCHASE_ORDER", "BILL"] },
        "sourceDocId": { "type": "string" },
        "sourceDocNo": { "type": "string" },
        "amountTotal": { "type": "number" },
        "amountPaid": { "type": "number" },
        "balance": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "dueDate": { "type": "string", "format": "date" },
        "lastPaymentDate": { "type": "string", "format": "date" },
        "paidOffDate": { "type": "string", "format": "date" },
        "note": { "type": "string" },
        "jobId": { "type": "string" },
        "customerNameSnapshot": { "type": "string" },
        "customerPhoneSnapshot": { "type": "string" },
        "vendorId": { "type": "string" },
        "vendorShortNameSnapshot": { "type": "string" },
        "vendorNameSnapshot": { "type": "string" },
        "invoiceNo": { "type": "string" }
      },
      "required": [
