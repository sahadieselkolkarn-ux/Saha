
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": [
            "ADMIN",
            "MANAGER",
            "OFFICER",
            "WORKER"
          ]
        },
        "department": {
          "type": "string",
          "description": "The department the user belongs to.",
          "enum": [
            "MANAGEMENT",
            "OFFICE",
            "CAR_SERVICE",
            "COMMONRAIL",
            "MECHANIC",
            "OUTSOURCE"
          ]
        },
        "status": {
          "type": "string",
          "description": "The user's account status.",
          "enum": [
            "ACTIVE",
            "PENDING",
            "SUSPENDED"
          ]
        },
        "personal": {
          "type": "object",
          "description": "Personal information of the user.",
          "properties": {
            "idCardNo": {
              "type": "string"
            },
            "address": {
              "type": "string"
            },
            "bank": {
              "type": "object",
              "properties": {
                "bankName": {
                  "type": "string"
                },
                "accountName": {
                  "type": "string"
                },
                "accountNo": {
                  "type": "string"
                }
              }
            },
            "emergencyContact": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "relationship": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                }
              }
            }
          }
        },
        "hr": {
          "type": "object",
          "description": "HR-related information for the user.",
          "properties": {
            "salaryMonthly": {
              "type": "number"
            },
            "payType": {
                "type": "string",
                "enum": ["MONTHLY", "DAILY"]
            },
            "ssoHospital": {
              "type": "string"
            },
            "note": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the user was last updated."
        },
        "lastAttendance": {
          "type": "object",
          "description": "The user's last attendance record to avoid complex queries.",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "IN",
                "OUT"
              ]
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "required": [
        "uid",
        "displayName",
        "email",
        "phone",
        "createdAt",
        "updatedAt"
      ]
    },
    "Customer": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Customer",
      "type": "object",
      "description": "Represents a customer.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the customer."
        },
        "name": {
          "type": "string",
          "description": "The customer's name."
        },
        "phone": {
          "type": "string",
          "description": "The customer's phone number."
        },
        "detail": {
          "type": "string",
          "description": "Additional details about the customer."
        },
        "useTax": {
          "type": "boolean",
          "description": "Indicates whether the customer uses tax."
        },
        "taxName": {
          "type": "string",
          "description": "The customer's tax name (if useTax is true)."
        },
        "taxAddress": {
          "type": "string",
          "description": "The customer's tax address (if useTax is true)."
        },
        "taxId": {
          "type": "string",
          "description": "The customer's tax ID (if useTax is true)."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the customer was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp of when the customer was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "phone",
        "detail",
        "useTax",
        "createdAt",
        "updatedAt"
      ]
    },
    "Job": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Job",
      "type": "object",
      "description": "Represents a job.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the job."
        },
        "customerId": {
          "type": "string",
          "description": "Reference to Customer. (Relationship: Customer 1:N Job)"
        },
        "customerSnapshot": {
          "type": "object",
          "description": "Snapshot of customer data (name, phone) at the time the job was created.",
          "properties": {
            "name": {
              "type": "string"
            },
            "phone": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "phone"
          ]
        },
        "department": {
          "type": "string",
          "description": "The department responsible for the job (CAR_SERVICE, COMMONRAIL, MECHANIC, OUTSOURCE)."
        },
        "status": {
          "type": "string",
          "description": "The job's status (RECEIVED, IN_PROGRESS, DONE, CLOSED)."
        },
        "description": {
          "type": "string",
          "description": "Description of the job (symptoms/details)."
        },
        "photos": {
          "type": "array",
          "description": "Array of URLs for photos related to the job.",
          "items": {
            "type": "string"
          }
        },
        "technicalReport": {
          "type": "string",
          "description": "Technical report or test results, mainly for COMMONRAIL and MECHANIC jobs."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the job was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp of when the job was last updated.",
          "format": "date-time"
        },
        "lastActivityAt": {
          "type": "string",
          "description": "Timestamp of the last activity related to the job.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "customerId",
        "customerSnapshot",
        "department",
        "status",
        "description",
        "photos",
        "createdAt",
        "updatedAt",
        "lastActivityAt"
      ]
    },
    "JobActivity": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Job Activity",
      "description": "Represents a single activity log entry for a job.",
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "The text content of the activity log."
        },
        "userName": {
          "type": "string",
          "description": "Name of the user who created the activity."
        },
        "userId": {
          "type": "string",
          "description": "UID of the user who created the activity."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the activity was created."
        },
        "photos": {
          "type": "array",
          "description": "Array of URLs for photos related to the activity.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "required": [
        "text",
        "userName",
        "userId",
        "createdAt"
      ]
    },
    "Attendance": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Attendance",
      "description": "Represents a user's clock-in or clock-out record.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the attendance record."
        },
        "userId": {
          "type": "string",
          "description": "The UID of the user who this record belongs to."
        },
        "userName": {
          "type": "string",
          "description": "The display name of the user at the time of recording."
        },
        "type": {
          "type": "string",
          "description": "The type of record, either IN or OUT.",
          "enum": [
            "IN",
            "OUT"
          ]
        },
        "timestamp": {
          "type": "string",
          "description": "Timestamp of when the record was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "userName",
        "type",
        "timestamp"
      ]
    },
    "KioskToken": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Kiosk Token",
      "description": "A short-lived token generated by a kiosk for attendance scanning.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique token string."
        },
        "createdAtMs": {
          "type": "number",
          "description": "Timestamp (in milliseconds) of when the token was created."
        },
        "expiresAtMs": {
          "type": "number",
          "description": "Timestamp (in milliseconds) of when the token expires."
        },
        "isActive": {
          "type": "boolean",
          "description": "Whether the token is currently active."
        }
      },
      "required": [
        "id",
        "createdAtMs",
        "expiresAtMs",
        "isActive"
      ]
    },
    "LeaveTypePolicy": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Leave Type Policy",
      "description": "Defines the policy for a specific type of leave.",
      "type": "object",
      "properties": {
        "annualEntitlement": {
          "type": "number",
          "description": "Number of entitled leave days per year."
        },
        "overLimitHandling": {
          "type": "object",
          "description": "How to handle leaves that exceed the annual entitlement.",
          "properties": {
            "mode": {
              "type": "string",
              "enum": [
                "DEDUCT_SALARY",
                "UNPAID",
                "DISALLOW"
              ],
              "description": "Action to take when leave limit is exceeded."
            },
            "salaryDeductionBaseDays": {
              "type": "number",
              "description": "The base number of days to divide the monthly salary by for deduction calculation (e.g., 26)."
            }
          }
        }
      }
    },
    "HRSettings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "HR Settings",
      "description": "Configuration for Human Resources module.",
      "type": "object",
      "properties": {
        "workStart": {
          "type": "string",
          "description": "Work start time (HH:mm)"
        },
        "workEnd": {
          "type": "string",
          "description": "Work end time (HH:mm)"
        },
        "breakStart": {
          "type": "string",
          "description": "Break start time (HH:mm)"
        },
        "breakEnd": {
          "type": "string",
          "description": "Break end time (HH:mm)"
        },
        "graceMinutes": {
          "type": "number",
          "description": "Grace period for being late in minutes."
        },
        "absentCutoffTime": {
          "type": "string",
          "description": "Time after which an employee is marked absent (HH:mm)."
        },
        "minSecondsBetweenScans": {
          "type": "number",
          "description": "Minimum seconds between two attendance scans for the same user."
        },
        "payroll": {
          "type": "object",
          "properties": {
            "payday1": {
              "type": "number"
            },
            "payday2": {
              "type": "string"
            },
            "period1Start": {
              "type": "number"
            },
            "period1End": {
              "type": "number"
            },
            "period2Start": {
              "type": "number"
            },
            "period2End": {
              "type": "string"
            }
          }
        },
        "sso": {
          "type": "object",
          "properties": {
            "employeePercent": {
              "type": "number"
            },
            "employerPercent": {
              "type": "number"
            },
            "monthlyCap": {
              "type": "number"
            },
            "effectiveFrom": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "withholding": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "defaultPercent": {
              "type": "number"
            },
            "note": {
              "type": "string"
            }
          }
        },
        "leavePolicy": {
          "type": "object",
          "description": "Defines the company's leave policy.",
          "properties": {
            "calculationPeriod": {
              "type": "string",
              "enum": [
                "CALENDAR_YEAR"
              ],
              "description": "The period for calculating annual leave entitlement (fixed to calendar year)."
            },
            "leaveTypes": {
              "type": "object",
              "description": "Configuration for different types of leave.",
              "properties": {
                "SICK": {
                  "$ref": "#/backend/entities/LeaveTypePolicy"
                },
                "BUSINESS": {
                  "$ref": "#/backend/entities/LeaveTypePolicy"
                },
                "VACATION": {
                  "$ref": "#/backend/entities/LeaveTypePolicy"
                }
              }
            }
          }
        }
      }
    },
    "HRHoliday": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "HR Holiday",
      "description": "Represents a single company holiday.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the holiday in YYYY-MM-DD format."
        },
        "name": {
          "type": "string",
          "description": "The name of the holiday (e.g., New Year's Day)."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the holiday was added."
        }
      },
      "required": [
        "id",
        "date",
        "name",
        "createdAt"
      ]
    },
    "LeaveRequest": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Leave Request",
      "description": "Represents a single leave request submitted by an employee.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "leaveType": {
          "type": "string",
          "enum": [
            "SICK",
            "BUSINESS",
            "VACATION"
          ]
        },
        "startDate": {
          "type": "string",
          "format": "date"
        },
        "endDate": {
          "type": "string",
          "format": "date"
        },
        "days": {
          "type": "number"
        },
        "reason": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "SUBMITTED",
            "APPROVED",
            "REJECTED",
            "CANCELLED"
          ]
        },
        "year": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "userName",
        "leaveType",
        "startDate",
        "endDate",
        "days",
        "reason",
        "status",
        "year",
        "createdAt",
        "updatedAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profile information.",
          "params": [
            {
              "name": "userId",
              "description": "The unique ID of the user."
            }
          ]
        }
      },
      {
        "path": "/customers/{customerId}",
        "definition": {
          "entityName": "Customer",
          "schema": {
            "$ref": "#/backend/entities/Customer"
          },
          "description": "Stores customer information.",
          "params": [
            {
              "name": "customerId",
              "description": "The unique ID of the customer."
            }
          ]
        }
      },
      {
        "path": "/jobs/{jobId}",
        "definition": {
          "entityName": "Job",
          "schema": {
            "$ref": "#/backend/entities/Job"
          },
          "description": "Stores job information.",
          "params": [
            {
              "name": "jobId",
              "description": "The unique ID of the job."
            }
          ]
        }
      },
      {
        "path": "/jobs/{jobId}/activities/{activityId}",
        "definition": {
          "entityName": "JobActivity",
          "schema": {
            "$ref": "#/backend/entities/JobActivity"
          },
          "description": "Stores activity logs for a specific job.",
          "params": [
            {
              "name": "jobId",
              "description": "The unique ID of the job."
            },
            {
              "name": "activityId",
              "description": "The unique ID of the activity."
            }
          ]
        }
      },
      {
        "path": "/attendance/{attendanceId}",
        "definition": {
          "entityName": "Attendance",
          "schema": {
            "$ref": "#/backend/entities/Attendance"
          },
          "description": "Stores clock-in/out records.",
          "params": [
            {
              "name": "attendanceId",
              "description": "The unique ID of the attendance record."
            }
          ]
        }
      },
      {
        "path": "/kioskTokens/{tokenId}",
        "definition": {
          "entityName": "KioskToken",
          "schema": {
            "$ref": "#/backend/entities/KioskToken"
          },
          "description": "Stores temporary tokens for kiosk attendance.",
          "params": [
            {
              "name": "tokenId",
              "description": "The unique token ID."
            }
          ]
        }
      },
      {
        "path": "/settings/{settingId}",
        "definition": {
          "entityName": "HRSettings",
          "schema": {
            "$ref": "#/backend/entities/HRSettings"
          },
          "description": "Stores application settings, like 'hr' settings.",
          "params": [
            {
              "name": "settingId",
              "description": "The ID of the settings document (e.g., 'hr')."
            }
          ]
        }
      },
      {
        "path": "/hrHolidays/{holidayId}",
        "definition": {
          "entityName": "HRHoliday",
          "schema": {
            "$ref": "#/backend/entities/HRHoliday"
          },
          "description": "Stores company holiday records.",
          "params": [
            {
              "name": "holidayId",
              "description": "The unique ID of the holiday record."
            }
          ]
        }
      },
      {
        "path": "/hrLeaves/{leaveId}",
        "definition": {
          "entityName": "LeaveRequest",
          "schema": {
            "$ref": "#/backend/entities/LeaveRequest"
          },
          "description": "Stores employee leave requests.",
          "params": [
            {
              "name": "leaveId",
              "description": "The unique ID of the leave request."
            }
          ]
        }
      }
    ]
  }
}
